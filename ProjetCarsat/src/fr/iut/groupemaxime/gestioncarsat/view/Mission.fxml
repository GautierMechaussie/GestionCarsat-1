                     <HBox.margin>
                        <Insets top="13.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefWidth="600.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="150.0" text="Lieu du déplacement :" />
                  <TextField fx:id="lieuDeplacementTextField" prefWidth="150.0">
                     <HBox.margin>
                        <Insets top="13.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefWidth="600.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="81.0" text="Au titre de :" />
