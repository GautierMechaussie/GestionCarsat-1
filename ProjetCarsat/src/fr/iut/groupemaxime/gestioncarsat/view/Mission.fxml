                        <ToggleGroup fx:id="titreToggleG" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="formationRadioBtn" mnemonicParsing="false" prefHeight="50.0" text="La formation" toggleGroup="$titreToggleG" />
               </children>
            </HBox>
            <HBox prefWidth="600.0" spacing="35.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#retournerAInfoPerso" prefWidth="75.0" text="Retour" />
                  <Button mnemonicParsing="false" onAction="#passerAMoyenTransport" text="Suivant &gt;&gt;" />
               </children>
               <padding>
                  <Insets left="275.0" />
               </padding>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
